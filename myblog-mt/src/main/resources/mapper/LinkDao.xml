<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.esieve.link.dao.LinkDao">

    <select id="getLinkByLinkId" resultType="Link" parameterType="int">
        SELECT * FROM link WHERE link_id=#{linkId};
    </select>

    <select id="getLinks" resultType="Link">
        SELECT * FROM link;
    </select>

    <insert id="insertLink" parameterType="Link">
        INSERT INTO link VALUES (#{linkId},#{linkName},#{url});
    </insert>

    <update id="updateLink" parameterType="Link">
        UPDATE link SET link_name=#{linkName},url=#{url} WHERE link_id=#{linkId};
    </update>

    <delete id="deleteLink" parameterType="int">
        DELETE FROM link where link_id=#{linkId};
    </delete>

</mapper>